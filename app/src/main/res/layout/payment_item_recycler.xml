<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/normal_card_radius"
    app:cardElevation="0dp"
    android:layout_marginBottom="@dimen/normal_margin"
    android:backgroundTint="@color/colorLoginEditText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Payment tittle"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/big_text_size"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/margin_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="500$"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size_payment"
            android:layout_marginTop="@dimen/normal_margin"
            app:layout_constraintStart_toStartOf="@id/tittle"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/normal_margin" />

        <TextView
            android:id="@+id/created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20/05/2012 data"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size_payment"
            android:layout_marginEnd="@dimen/margin_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/amount"
            app:layout_constraintBottom_toBottomOf="@id/amount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>